<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/namakota"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:paddingLeft="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="8dp"
        tools:text="Kota anda" />

    <ImageView
        android:id="@+id/fotocuaca"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/namakota" />

    <TextView
        android:id="@+id/date"
        android:layout_width="311dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/fotocuaca"
        app:layout_constraintTop_toTopOf="@+id/fotocuaca"
        tools:text="Tanggal" />

    <TextView
        android:id="@+id/cuaca"
        android:layout_width="311dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/fotocuaca"
        app:layout_constraintTop_toBottomOf="@+id/date"
        tools:text="cuaca" />

</android.support.constraint.ConstraintLayout>